@model HotelxIdentity.Models.RoomType

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 style="text-align: center; margin-top: 10px; margin-bottom: 20px;">RoomType</h4>

<div class="my-form">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.RoomTypeName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.RoomTypeName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RoomTypeName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group button-group">
            <div class="col-md-10">
                <input type="submit" value="Create" />
            </div>


        </div>

        <div class="back">
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
    }


</div>
<style>
    .my-form {
        display: flex;
        justify-content: center;
        align-items: center;
      
    }

    .control-label {
        text-align: right;
    }

    .form-control {
        width: 100%;
    }

    .text-danger {
        color: red;
    }

    .col-md-offset-2 {
        margin-left: 16.66666667%;
    }

    .col-md-10 {
        width: 83.33333333%;
    }




    .button-group {
        /*display: flex;
        justify-content: center;
        align-items: center;*/
    }

        .button-group input[type="submit"],
        .back a {
            display: inline-block;
            padding: 10px 20px;
            margin: 5px;
            background-color: #007bff;
            color: #fff;
            text-decoration: none;
            border-radius: 4px;
        }

            .button-group input[type="submit"]:hover,
            .back a:hover {
                background-color: #0056b3;
            }



</style>