@model HotelxIdentity.Models.RoomType

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="room-type-container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>RoomType</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.RoomTypeId)

            <div class="form-group">
                @Html.LabelFor(model => model.RoomTypeName, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.RoomTypeName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.RoomTypeName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div>
                    <input type="submit" value="Save" class="btn-save" />
                </div>
            </div>
        </div>
    }

    <div class="back-to-list">
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn-back" })
    </div>
</div>

<style>
    .room-type-container {
        text-align: center;
    }

    .form-horizontal {
        margin: 0 auto;
        width: 50%;
    }

    h4 {
        text-align: center;
    }

    .text-danger {
        color: red;
    }

    .control-label {
        font-weight: bold;
        display: block;
        padding-left: 2px;
    }

    .form-control {
        width: 100%;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .form-group {
        margin-bottom: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
       
    }

    .btn-save,
    .btn-back {
        display: inline-block;
        padding: 8px 16px;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s, color 0.3s;
        text-decoration: none;
        text-align: center;
    }

        .btn-save:hover,
        .btn-back:hover {
            background-color: #0056b3;
            color: #fff;
        }

    .back-to-list {
        text-align: center;
        margin-top: 16px;
    }

</style>